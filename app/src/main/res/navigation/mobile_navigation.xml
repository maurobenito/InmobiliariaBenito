<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.inmobiliariabenito.ui.inicio.HomeFragment"
        android:label="@string/inicio"
        tools:layout="@layout/fragment_home" />


    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.inmobiliariabenito.ui.inmueble.InmuebleFragment"
        android:label="@string/inmuebles"
        tools:layout="@layout/fragment_inmueble">
        <action
            android:id="@+id/action_nav_gallery_to_detalleInmuebleFragment"
            app:destination="@id/detalleInmuebleFragment" />
    </fragment>


    <fragment
        android:id="@+id/nav_inquilino"
        android:name="com.example.inmobiliariabenito.ui.inquilino.InquilinoFragment"
        android:label="Inquilinos"
        tools:layout="@layout/fragment_inquilino" />


    <fragment
        android:id="@+id/nav_contrato"
        android:name="com.example.inmobiliariabenito.ui.contrato.ContratoFragment"
        android:label="Contratos"
        tools:layout="@layout/fragment_contrato">
        <action
            android:id="@+id/action_nav_contrato_to_detalleContratoFragment"
            app:destination="@id/detalleContratoFragment" />
    </fragment>


    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.example.inmobiliariabenito.ui.perfil.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />


    <fragment
        android:id="@+id/nav_inmueble_crear"
        android:name="com.example.inmobiliariabenito.ui.inmueble.CrearInmuebleFragment"
        android:label="Nuevo Inmueble"
        tools:layout="@layout/fragment_crear_inmueble" />


    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.inmobiliariabenito.ui.salir.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />


    <fragment
        android:id="@+id/detalleInmuebleFragment"
        android:name="com.example.inmobiliariabenito.ui.inmueble.DetalleInmuebleFragment"
        android:label="Detalle del Inmueble"
        tools:layout="@layout/fragment_detalle_inmueble">
        <action
            android:id="@+id/action_detalleInmuebleFragment_to_nav_gallery"
            app:destination="@id/nav_gallery" />
    </fragment>


    <fragment
        android:id="@+id/detalleContratoFragment"
        android:name="com.example.inmobiliariabenito.ui.contrato.DetalleContratoFragment"
        android:label="fragment_detalle_contrato"
        tools:layout="@layout/fragment_detalle_contrato" />


    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.inmobiliariabenito.ui.login.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />

</navigation>
